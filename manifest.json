{
  "manifest_version": 2,
  "name": "CrossHub Chrome Extension",
  "version": "0.2.0",

  "description": "Adds 'Go to definition' and 'Find Usages' functionality to TypeScript projects on Github",

  "author": "Anton Astashov",
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "default_icon": "icon38.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["https://github.com/*"],
      "js": [
        "constants.js",
        "utils.js",
        "path.js",
        "errors.js",
        "request.js",
        "tooltip.js",
        "github.js",
        "github/tree_path.js",
        "github/pull_path.js",
        "crosshub/pull.js",
        "crosshub/tree.js",
        "location_change_detector.js",
        "crosshub.js"
      ],
      "css": ["crosshub.css", "tooltip.css"]
  }]
}
